#!/usr/bin/env bash

if [ $# -gt 0 ]; then
  if [ "$1" == "npm" ]; then
    shift 1
    docker-compose run --rm server npm "$@"
  elif [ "$1" == "test" ]; then
    shift 1
    docker-compose run --rm server npm test "$@"
  elif [ "$1" == "test:watch" ]; then
    shift 1
    docker-compose run --rm server npm run test:watch "$@"
  fi
else
  docker-compose ps
fi
